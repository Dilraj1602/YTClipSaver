{
  "manifest_version": 3,
  "name": "YTClipSaver - YouTube Bookmark Manager",
  "description": "Bookmark and manage timestamps in YouTube videos with search, filter, and keyboard shortcuts",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YTClipSaver - Manage YouTube Bookmarks"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "assets/ext-icon.png",
    "48": "assets/ext-icon.png",
    "128": "assets/ext-icon.png"
  }
}
